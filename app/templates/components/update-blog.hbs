{{#if updateBlogPost}}
  <h4>Update {{blog.title}}</h4>
  <div>
    <form>
      <div class="form-group">
        <label for="title">Title</label>
        {{input value=title id="title" placeholder=blog.title}}
      </div>

      <div class="form-group">
        <label for="date">Date</label>
        {{input value=date id="date" placeholder=blog.date}}
      </div>

      <div class="form-group">
        <label for="body">Body</label>
        {{input value=body id="body" placeholder=blog.body}}
      </div>

      <button {{action 'update' blog}}>Update</button>
    </form>
  </div>
  {{else}}
    <button {{action 'updateBlogPost'}}>Update</button>
    {{/if}}
