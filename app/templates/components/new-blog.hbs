{{#if addNewBlog}}
<h1>New Blog</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="title">Title</label>
        {{input value=title id="title"}}
      </div>

      <div class="form-group">
        <label for="date">Date</label>
        {{input value=date id="date"}}
      </div>

      <div class="form-group">
        <label for="body">Body</label>
        {{input value=body id="body"}}
      </div>

      <button {{action 'sav1e'}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'blogPostShow'}}>Add Entry</button>
{{/if}}
